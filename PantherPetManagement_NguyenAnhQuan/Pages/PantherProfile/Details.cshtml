@page "/PantherProfile/Detail"
@model PantherPetManagement_NguyenAnhQuan.Pages.PantherProfile.DetailModel
@{
    ViewData["Title"] = "PantherProfile Details";
}

<h2>Details</h2>

@if (Model.Profile != null)
{
    <table class="table">
        <tr><th>ID</th>           <td>@Model.Profile.PantherProfileId</td></tr>
        <tr><th>Type</th>         <td>@Model.Profile.PantherTypes.PantherTypeName</td></tr>
        <tr><th>Name</th>         <td>@Model.Profile.PantherName</td></tr>
        <tr><th>Weight</th>       <td>@Model.Profile.Weight</td></tr>
        <tr><th>Characteristics</th><td>@Model.Profile.Characteristics</td></tr>
        <tr><th>Warning</th>      <td>@Model.Profile.Warning</td></tr>
        <tr><th>Modified</th>     <td>@Model.Profile.ModifiedDate</td></tr>
    </table>
}
else
{
    <p>Profile not found.</p>
}

<a asp-page="./Index" class="btn btn-secondary">Back to List</a>