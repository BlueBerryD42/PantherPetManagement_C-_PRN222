@page "/PantherProfile/Delete"
@model PantherPetManagement_NguyenAnhQuan.Pages.PantherProfile.DeleteModel
@{
    ViewData["Title"] = "Delete Panther Profile";
}

<h2>Delete Panther Profile</h2>

@if (Model.Profile != null)
{
    <p>Are you sure you want to delete the following Panther profile?</p>

    <table class="table table-bordered w-50">
        <tr>
            <th>ID</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.Profile.PantherName</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>@Model.Profile.PantherTypes.PantherTypeName</td>
        </tr>
        <tr>
            <th>Weight</th>
            <td>@Model.Profile.Weight</td>
        </tr>
        <tr>
            <th>Modified</th>
            <td>@Model.Profile.ModifiedDate</td>
        </tr>
    </table>

    <form method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Yes, delete</button>
        <a asp-page="./Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
}
else
{
    <p>Profile not found.</p>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
}
